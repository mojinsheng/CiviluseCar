<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/select_btn_cornor_radius" /><!-- 设置圆角半径 -->
                    <solid android:color="@color/select_btn_right_bg_normal" />
                </shape>
            </item>
            <item android:top="1dp"  android:bottom="1dp" android:left="1dp" android:right="@dimen/select_btn_right_widht">
                <shape>
                    <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" /><!-- 设置圆角半径 -->
                    <solid android:color="@color/color_white" />
                    <padding android:right="@dimen/select_btn_right_padding" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/select_btn_cornor_radius" /><!-- 设置圆角半径 -->
                    <solid android:color="@color/select_btn_right_bg_pressed" />
                </shape>
            </item>
            <item android:top="1dp"  android:bottom="1dp" android:left="1dp" android:right="@dimen/select_btn_right_widht">
                <shape>
                    <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" /><!-- 设置圆角半径 -->
                    <solid android:color="@color/color_white" />
                    <padding android:right="@dimen/select_btn_right_padding" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>